<main>
  <%= if get_flash(@conn, :info) do %>
    <p class="bg-blue-900 border border-blue-500 text-blue-200 px-4 py-3 rounded mb-4" role="alert"><%= get_flash(@conn, :info) %></p>
  <% end %>
  <%= if get_flash(@conn, :error) do %>
    <p class="bg-red-900 border border-red-500 text-red-200 px-4 py-3 rounded mb-4" role="alert"><%= get_flash(@conn, :error) %></p>
  <% end %>
  <%= @inner_content %>
</main>
